result-view {
  match {
    Stop (this)
  }

  render {
    if ("size(this) > 1") {
      list-of (this) {
        where-each (stop) {
          layout-macro (stop-summary) {
            param (stop) {
              expression (stop)
            }
          }
        }
      }
    } else-if ("size(this) == 1") {
      layout-macro (stop-summary) {
        param (stop) {
          expression (this)
        }
      }
    }
  }
}