layout-macro-def (train-details) {
  match: Vehicle (train)
  mode (Details)

  content {
    section {
      content {
        paragraph {
          "#{value(train.scheduleNumber)}"
          if(exists(value(train.minutesToNextStops))) {
            value("#{value(train.minutesToNextStops)}")
          } else {
              value("No details available at the moment")    
          }
          style(Detail_M)
        }
      }
    }
  }
}
